<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_pic"
            android:layout_width="@dimen/_45dp"
            android:layout_height="@dimen/_45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/chat_scrren_pic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.holela.Controller.Textview_open_regular
                android:id="@+id/username"
                android:layout_width="@dimen/_200dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/UserName"
                android:textColor="@color/Black" />


            <com.holela.Controller.Textview_open_regular
                android:id="@+id/newmsg"
                android:layout_width="@dimen/_200dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10dp"
                android:text="New Message"
                android:textColor="@color/back"
                android:textSize="@dimen/_10dp" />


        </LinearLayout>

        <View
            android:layout_width="@dimen/_1dp"
            android:layout_height="@dimen/_23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_4dp"
            android:background="@color/Search_color" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15dp"
            android:rotation="+180"
            android:src="@drawable/arrow_right" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/messages_sepeator" />


    </LinearLayout>


</LinearLayout>