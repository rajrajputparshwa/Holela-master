<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10sp"
            android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/post_pic"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/profile_pic"
        />

        <com.holela.Controller.MyRiad_Pro_Regular
                android:id="@+id/post_text"
                android:layout_width="@dimen/_170dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="ewffkjnjkwnf"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_15dp"
                android:textColor="@color/postdetail"/>
        <com.holela.Controller.MyRiad_Pro_Regular
                android:id="@+id/post_date"
                android:layout_width="@dimen/_35dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_15dp"
                android:textColor="@color/gray"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/share_btn"
                android:orientation="vertical">


            <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/more_bullets"/>


        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textlayout"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_38dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:gravity="center"
            android:orientation="vertical">

        <io.github.rockerhieu.emojicon.EmojiconTextView
                android:id="@+id/text_post"
                android:layout_width="@dimen/_300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_40dp"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/media_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300dp"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"/>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5dp"
            android:layout_marginTop="@dimen/_5dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/heartlike"
                android:layout_width="@dimen/_15dp"
                android:layout_height="@dimen/_15dp"
                android:layout_gravity="right"
                android:src="@drawable/like"
        />

        <ImageView
                android:id="@+id/heartunlike"
                android:layout_width="@dimen/_15dp"
                android:layout_height="@dimen/_15dp"
                android:layout_gravity="right"
                android:src="@drawable/fill_heart_3x"
                android:visibility="gone"
        />


        <TextView
                android:id="@+id/changelike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2dp"
                android:layout_marginRight="@dimen/_20dp"
                android:textColor="@color/yourstory"
                android:textSize="@dimen/_12dp"/>


        <TextView
                android:id="@+id/likecounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2dp"
                android:layout_marginRight="@dimen/_20dp"
                android:textColor="@color/yourstory"
                android:textSize="@dimen/_12dp"/>


        <ImageView
                android:id="@+id/commentimg"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_15dp"
                android:layout_gravity="left"
                android:layout_marginRight="@dimen/_40dp"
                android:src="@drawable/comment"/>


        <TextView
                android:id="@+id/commentscounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_65dp"
                android:textColor="@color/yourstory"
                android:textSize="@dimen/_12dp"/>


        <ImageView
                android:id="@+id/sendimg"
                android:layout_width="@dimen/_15dp"
                android:layout_height="@dimen/_15dp"
                android:layout_gravity="left"
                android:layout_marginRight="@dimen/_87dp"
                android:src="@drawable/share"/>


        <TextView
                android:id="@+id/sharecounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_110dp"
                android:textColor="@color/yourstory"
                android:textSize="@dimen/_12dp"/>

        <ImageView
                android:id="@+id/shareimg"
                android:layout_width="@dimen/_15dp"
                android:layout_height="@dimen/_15dp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_132dp"
                android:src="@drawable/repost"/>


        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45"
            android:id="@+id/repostcounts"
            android:layout_marginLeft="@dimen/_180dp"
            android:textSize="@dimen/_12dp"
            android:textColor="@color/yourstory"/>-->

        <!--
                <ImageView
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:src="@drawable/hand_clap_icon"/>-->


        <ImageView
                android:id="@+id/save_home"
                android:layout_width="@dimen/_12dp"
                android:layout_height="@dimen/_12dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5dp"
                android:src="@drawable/share_home"/>


    </RelativeLayout>

    <LinearLayout
            android:layout_width="@dimen/_230dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_7dp"
            android:orientation="horizontal">

        <com.holela.Controller.MyRiad_Pro_Regular
                android:id="@+id/like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_30dp"
                android:layout_marginLeft="@dimen/_2dp"
                android:text="45"
                android:textColor="@color/liketext"
                android:textSize="@dimen/_10dp"/>


        <com.holela.Controller.MyRiad_Pro_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Likes."
                android:textColor="@color/liketext"

                android:textSize="@dimen/_10dp"/>


        <com.holela.Controller.MyRiad_Pro_Regular
                android:id="@+id/comment_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_2dp"
                android:text="5"
                android:textColor="@color/liketext"
                android:textSize="@dimen/_10dp"/>


        <com.holela.Controller.MyRiad_Pro_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments."

                android:textColor="@color/liketext"
                android:textSize="@dimen/_10dp"/>


        <com.holela.Controller.MyRiad_Pro_Regular
                android:id="@+id/repost_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_2dp"
                android:text="2"
                android:textColor="@color/liketext"
                android:textSize="@dimen/_10dp"/>


        <com.holela.Controller.MyRiad_Pro_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repost."

                android:textColor="@color/liketext"
                android:textSize="@dimen/_10dp"/>


        <com.holela.Controller.MyRiad_Pro_Regular
                android:id="@+id/share_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_2dp"
                android:text="102"
                android:textColor="@color/liketext"
                android:textSize="@dimen/_10dp"/>


        <com.holela.Controller.MyRiad_Pro_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share."
                android:textColor="@color/liketext"
                android:textSize="@dimen/_10dp"/>


    </LinearLayout>


</LinearLayout>

