<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.holela.Fragment.Searchview">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:id="@+id/frame_homee"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30dp"
        android:focusable="true"
        android:id="@+id/search"
        android:background="#80C0C0C0"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:src="@drawable/back" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30dp"
            android:paddingLeft="@dimen/_5dp"
            android:layout_marginLeft="@dimen/_80dp">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7dp"
                android:paddingLeft="@dimen/_5dp"
                android:background="@drawable/search_gray" />




            <com.holela.Controller.Edittext_open_semi_bold
                android:id="@+id/searchedittext"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:layout_marginLeft="@dimen/_5dp"
                android:textColor="@color/phone_email"
                android:cursorVisible="true"
                android:singleLine="true"
                android:hint="@string/Search"
                android:textCursorDrawable="@null" />


        </LinearLayout>





    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylerrr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search"
        android:layout_marginTop="@dimen/_5dp">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
