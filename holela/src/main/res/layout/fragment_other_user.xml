<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:layout_marginBottom="@dimen/_40dp"
    android:id="@+id/relacon">

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containere"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:layout_marginBottom="@dimen/_40dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80C0C0C0">

        <ImageView
            android:id="@+id/holelamain"
            android:layout_width="@dimen/_50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20dp"
            android:src="@drawable/home_blue_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_10dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.holela.Controller.Textview_open_regular
                    android:id="@+id/headusername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_40dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_3dp"
                    android:gravity="center"
                    android:text="@string/UserName" />

            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/_16dp"
                android:layout_margin="@dimen/_5dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/Search"></View>


            <ImageView
                android:id="@+id/chat_icon"
                android:layout_width="14dp"
                android:layout_height="@dimen/_15dp"
                android:layout_gravity="center"
                android:src="@drawable/settings" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="@dimen/_70dp"
                android:layout_height="@dimen/_70dp"
                android:layout_marginLeft="@dimen/_30dp"
                android:layout_marginTop="@dimen/_15dp"
                android:src="@drawable/user" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <com.holela.Controller.MyRiad_Pro_Regular
                        android:id="@+id/postcounts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_34dp"
                        android:layout_marginTop="@dimen/_15dp"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textSize="@dimen/_20dp" />


                    <com.holela.Controller.MyRiad_Pro_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_27dp"
                        android:text="@string/Post"
                        android:textSize="@dimen/_15dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:orientation="vertical">


                    <com.holela.Controller.MyRiad_Pro_Regular
                        android:id="@+id/followerscounts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_30dp"
                        android:layout_marginTop="@dimen/_15dp"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textSize="@dimen/_20dp" />


                    <com.holela.Controller.MyRiad_Pro_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12dp"
                        android:text="@string/followers"
                        android:id="@+id/followerstext"
                        android:textSize="@dimen/_15dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <com.holela.Controller.MyRiad_Pro_Regular
                        android:id="@+id/followingcounts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_30dp"
                        android:layout_marginTop="@dimen/_15dp"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textSize="@dimen/_20dp" />


                    <com.holela.Controller.MyRiad_Pro_Regular
                        android:id="@+id/followingtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12dp"
                        android:text="@string/following"
                        android:textSize="@dimen/_15dp" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.holela.Controller.MyRiad_Pro_Regular
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginRight="@dimen/_3dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/_15dp"
                    android:textStyle="bold" />

                <com.holela.Controller.MyRiad_Pro_Regular
                    android:id="@+id/statusss"
                    android:layout_width="@dimen/_120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/unfollow"
                    android:layout_width="@dimen/_150dp"
                    android:layout_height="@dimen/_25dp"
                    android:background="@drawable/cornerbtn"
                    android:gravity="center"
                    android:text="@string/UnFollow"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_10dp" />

                <Button
                    android:id="@+id/follow"
                    android:layout_width="@dimen/_150dp"
                    android:layout_height="@dimen/_25dp"
                    android:background="@drawable/cornerbtn"
                    android:gravity="center"
                    android:text="@string/Follow"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_10dp" />

                <Button
                    android:id="@+id/unblock"
                    android:layout_width="@dimen/_150dp"
                    android:layout_height="@dimen/_25dp"
                    android:background="@drawable/cornerbtn"
                    android:gravity="center"
                    android:text="@string/Unblock"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_10dp" />



            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.design.widget.TabLayout
                    android:id="@+id/profilee_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:background="@color/notification_you"
                    app:tabBackground="@drawable/tab_color_selector"
                    app:tabMode="fixed" />


                <com.holela.Controller.WrapContentHeightViewPager
                    android:id="@+id/viewpagerr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.holela.Controller.WrapContentHeightViewPager>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>