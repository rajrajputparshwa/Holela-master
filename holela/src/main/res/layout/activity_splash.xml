<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/language_selector_bg"
    android:orientation="vertical"
tools:context="com.holela.Activity.Splash">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_80dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100dp"
            android:layout_marginLeft="@dimen/_80dp"
            android:id="@+id/eyes"
            android:layout_marginRight="@dimen/_80dp"
            android:src="@drawable/lang_screen_logo_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100dp"
            android:layout_marginLeft="@dimen/_80dp"
            android:id="@+id/holela_icon"
            android:layout_marginRight="@dimen/_80dp"
            android:src="@drawable/lang_screen_logo_text" />

        <com.holela.Controller.Textview_open_regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:layout_gravity="center"
            android:text="@string/Language"
            android:textColor="@color/White"
            android:textSize="@dimen/_16sp" />

        <com.holela.Controller.Textview_open_regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/text2"
            android:text="@string/Language_one"
            android:textColor="@color/White"
            android:textSize="@dimen/_16sp" />


</LinearLayout>
</LinearLayout>